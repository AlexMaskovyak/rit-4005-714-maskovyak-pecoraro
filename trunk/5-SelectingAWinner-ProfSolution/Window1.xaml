<Window x:Class="ATS.Winner.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Card Game" Height="300" Width="800">
    <Grid>
        <StackPanel Name="Root" Orientation="Vertical">
            <StackPanel Name="Items" Orientation="Horizontal" HorizontalAlignment="Center">
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Name="Status" TextAlignment="Center" Margin="4" Width="200"/>
                <Button Name="Reset" Content="New Game" Margin="4" IsEnabled="False"
                        Click="Reset_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
